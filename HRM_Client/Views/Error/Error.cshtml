@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HRM System</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif;
            background-color: #ffffff;
            color: #24292f;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
        }

        .error-container {
            max-width: 500px;
            width: 100%;
            text-align: center;
        }

        .error-code {
            font-size: 72px;
            font-weight: 300;
            color: #0969da;
            margin-bottom: 16px;
            line-height: 1;
        }

        .error-title {
            font-size: 32px;
            font-weight: 400;
            color: #24292f;
            margin-bottom: 16px;
        }

        .error-message {
            font-size: 18px;
            color: #57606a;
            margin-bottom: 12px;
        }

        .error-description {
            font-size: 14px;
            color: #57606a;
            line-height: 1.6;
            margin-bottom: 32px;
        }

        .error-actions {
            display: flex;
            gap: 12px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn {
            padding: 12px 24px;
            font-size: 14px;
            font-weight: 500;
            border-radius: 6px;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.2s;
            border: none;
        }

        .btn-primary {
            color: #ffffff;
            background-color: #0969da;
        }

        .btn-primary:hover {
            background-color: #0860ca;
        }

        .btn-secondary {
            color: #24292f;
            background-color: #f6f8fa;
            border: 1px solid #d0d7de;
        }

        .btn-secondary:hover {
            background-color: #f3f4f6;
        }

        .error-icon {
            width: 120px;
            height: 120px;
            margin: 0 auto 24px;
        }

        .error-icon svg {
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <div class="error-icon">
            @if (ViewBag.StatusCode == 401)
            {
                <svg viewBox="0 0 24 24" fill="none" stroke="#0969da" stroke-width="1.5">
                    <path d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
            }
            else if (ViewBag.StatusCode == 403)
            {
                <svg viewBox="0 0 24 24" fill="none" stroke="#cf222e" stroke-width="1.5">
                    <path d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                </svg>
            }
            else if (ViewBag.StatusCode == 404)
            {
                <svg viewBox="0 0 24 24" fill="none" stroke="#57606a" stroke-width="1.5">
                    <path d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            }
            else
            {
                <svg viewBox="0 0 24 24" fill="none" stroke="#cf222e" stroke-width="1.5">
                    <path d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
            }
        </div>

        <div class="error-code">@ViewBag.StatusCode</div>
        <h1 class="error-title">@ViewBag.Title</h1>
        <p class="error-message">@ViewBag.Message</p>
        <p class="error-description">@ViewBag.Description</p>

        <div class="error-actions">
            @if (ViewBag.StatusCode == 401)
            {
                <a href="/Auth/Login" class="btn btn-primary">Sign In</a>
                <a href="/" class="btn btn-secondary">Go to Home</a>
            }
            else if (ViewBag.StatusCode == 404)
            {
                <a href="/Dashboard" class="btn btn-primary">Go to Dashboard</a>
                <button onclick="history.back()" class="btn btn-secondary">Go Back</button>
            }
            else
            {
                <button onclick="location.reload()" class="btn btn-primary">Try Again</button>
                <a href="/Dashboard" class="btn btn-secondary">Go to Dashboard</a>
            }
        </div>
    </div>
</body>
</html>

