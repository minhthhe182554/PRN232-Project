@model HRM_Client.Models.UserList
@{
    ViewBag.Title = "Department Employees";
    Layout = "_DashboardLayout";
    
    var allEmployees = (Model?.ActiveUsers ?? new List<HRM_Client.Models.UserListDto>()).ToList();
    var managerEmployees = allEmployees.Where(u => u.Role == "Manager").ToList();
    var regularEmployees = allEmployees.Where(u => u.Role == "Employee").ToList();
}

<link rel="stylesheet" href="~/css/common-styles.css" />

<div class="content-header">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <div>
            <h1 class="content-title">Department Employees</h1>
            <p class="content-subtitle">View all members in your department</p>
        </div>
        <div style="display: flex; align-items: center; gap: 8px; padding: 12px 20px; background-color: #f6f8fa; border: 1px solid #d0d7de; border-radius: 6px;">
            <span style="font-size: 14px; color: #57606a;">Total Members:</span>
            <span style="font-size: 20px; font-weight: 500; color: #24292f;">@allEmployees.Count</span>
        </div>
    </div>
</div>

<style>
    .employees-container {
        display: flex;
        flex-direction: column;
        gap: 24px;
        margin-top: 24px;
    }

    .employee-section {
        background-color: #ffffff;
        border: 1px solid #d0d7de;
        border-radius: 6px;
        overflow: hidden;
    }

    .section-header {
        padding: 16px 20px;
        border-bottom: 1px solid #d0d7de;
        background-color: #f6f8fa;
    }

    .section-title {
        font-size: 16px;
        font-weight: 500;
        color: #24292f;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .section-count {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 24px;
        height: 24px;
        padding: 0 8px;
        background-color: #ffffff;
        border: 1px solid #d0d7de;
        border-radius: 12px;
        font-size: 13px;
        font-weight: 500;
        color: #57606a;
    }

    .employee-table {
        width: 100%;
        border-collapse: collapse;
    }

    .employee-table thead {
        background-color: #f6f8fa;
    }

    .employee-table th {
        padding: 12px 20px;
        text-align: left;
        font-size: 13px;
        font-weight: 500;
        color: #57606a;
        border-bottom: 1px solid #d0d7de;
    }

    .employee-table td {
        padding: 16px 20px;
        font-size: 14px;
        color: #24292f;
        border-bottom: 1px solid #d0d7de;
    }

    .employee-table tbody tr:last-child td {
        border-bottom: none;
    }

    .employee-table tbody tr:hover {
        background-color: #f6f8fa;
    }

    .employee-name {
        font-weight: 500;
        color: #24292f;
    }

    .empty-state {
        padding: 48px 20px;
        text-align: center;
        color: #57606a;
        font-size: 14px;
    }
</style>

<div class="employees-container">
    @if (managerEmployees.Any())
    {
        <div class="employee-section">
            <div class="section-header">
                <div class="section-title">
                    <span>Managers</span>
                    <span class="section-count">@managerEmployees.Count</span>
                </div>
            </div>
            <table class="employee-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Full Name</th>
                        <th>Level</th>
                        <th>Today's Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in managerEmployees)
                    {
                        <tr>
                            <td>@employee.Id</td>
                            <td>
                                <span class="employee-name">@employee.FullName</span>
                            </td>
                            <td>
                                <span class="level-badge level-@employee.Level">@employee.Level</span>
                            </td>
                            <td>
                                @if (employee.TodayAttendanceStatus != null)
                                {
                                    var status = employee.TodayAttendanceStatus;
                                    var statusColor = status == "Present" ? "#1a7f37" : status == "Late" ? "#bf8700" : status == "LeaveEarly" ? "#0969da" : "#cf222e";
                                    var statusBg = status == "Present" ? "#dafbe1" : status == "Late" ? "#fff8c5" : status == "LeaveEarly" ? "#ddf4ff" : "#fff5f5";
                                    var statusText = status == "LeaveEarly" ? "On Leave" : status;
                                    <span style="display: inline-flex; padding: 4px 10px; background-color: @statusBg; border: 1px solid @statusColor; border-radius: 6px; font-size: 13px; color: @statusColor;">@statusText</span>
                                }
                                else
                                {
                                    <span style="color: #57606a;">Not checked in</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (regularEmployees.Any())
    {
        <div class="employee-section">
            <div class="section-header">
                <div class="section-title">
                    <span>Employees</span>
                    <span class="section-count">@regularEmployees.Count</span>
                </div>
            </div>
            <table class="employee-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Full Name</th>
                        <th>Level</th>
                        <th>Today's Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in regularEmployees)
                    {
                        <tr>
                            <td>@employee.Id</td>
                            <td>
                                <span class="employee-name">@employee.FullName</span>
                            </td>
                            <td>
                                <span class="level-badge level-@employee.Level">@employee.Level</span>
                            </td>
                            <td>
                                @if (employee.TodayAttendanceStatus != null)
                                {
                                    var status = employee.TodayAttendanceStatus;
                                    var statusColor = status == "Present" ? "#1a7f37" : status == "Late" ? "#bf8700" : status == "LeaveEarly" ? "#0969da" : "#cf222e";
                                    var statusBg = status == "Present" ? "#dafbe1" : status == "Late" ? "#fff8c5" : status == "LeaveEarly" ? "#ddf4ff" : "#fff5f5";
                                    var statusText = status == "LeaveEarly" ? "On Leave" : status;
                                    <span style="display: inline-flex; padding: 4px 10px; background-color: @statusBg; border: 1px solid @statusColor; border-radius: 6px; font-size: 13px; color: @statusColor;">@statusText</span>
                                }
                                else
                                {
                                    <span style="color: #57606a;">Not checked in</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (!allEmployees.Any())
    {
        <div class="employee-section">
            <div class="empty-state">
                No employees found in your department.
            </div>
        </div>
    }
</div>

